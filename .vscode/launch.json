{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mantle Debug",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/src/main.ts",
        "--config=${workspaceRoot}/config.json",
        "--numThreads=1",
        "--logging=true",
        "--inspect=true"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Mantle Production",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/src/main.ts",
        "--config=${workspaceRoot}/config.json",
        "--numThreads=1",
        "--logging=true",
        "--inspect=true"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Mantle Tests",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "-t",
        "1000000",
        "--exit",
        "test/index.js",
        "--config=./config.json",
        "--server=0",
        "--logging=false",
        "--keyFile=./volume-credentials.json",
        "--runningTests=true",
        "--clientsFolder=./test/",
        "--debug=true",
        "--remotes.maxFileSize=524288",
        "--remotes.local.url=http://localhost:8000",
        "--remotes.local.path=test/test-server/media"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    }
  ]
}