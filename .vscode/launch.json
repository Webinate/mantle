{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mantle Debug",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/src/main.ts",
        "--config=${workspaceRoot}/config.json",
        "--numThreads=1",
        "--logging=true",
        "--inspect=true"
      ],
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Mantle Test Server Debug",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/src/main.ts",
        "--config=${workspaceRoot}/config.json",
        "--numThreads=1",
        "--logging=true",
        "--inspect=true",
        "--server=0",
        "--keyFile=./volume-credentials.json",
        "--remotes.local.url=http://localhost:7002/",
        "--remotes.local.path=clients/bucket/media",
        "--remotes.maxFileSize=524288",
        "--runningClientTests=true"
      ],
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Generate Schema",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/src/main.ts",
        "--config=${workspaceRoot}/config.json",
        "--numThreads=1",
        "--logging=true",
        "--inspect=true",
        "--writeSchema=true"
      ],
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Mantle Debug - Watch",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "stopOnEntry": false,
      "program": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
      "args": [
        "${workspaceRoot}/src/main.ts",
        "--config=${workspaceRoot}/config.json",
        "--numThreads=1",
        "--logging=true",
        "--inspect=true"
      ],
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Mantle Production",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "outputCapture": "std",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/src/main.ts",
        "--config=${workspaceRoot}/config.json",
        "--numThreads=1",
        "--logging=true",
        "--inspect=true"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "production"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Mantle Tests",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "outputCapture": "std",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--file",
        "./test/index.ts",
        "--recursive",
        "./test/tests/**/*.ts",
        "--require",
        "ts-node/register",
        "--exit",
        "--config=./config.json",
        "--server=0",
        "--logging=false",
        "--keyFile=./volume-credentials.json",
        "--runningTests=true",
        "--debug=true",
        "--remotes.maxFileSize=524288",
        "--remotes.local.url=http://localhost:8000/",
        "--remotes.local.path=test/media-uploads"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "name": "Mantle Tests - Active File",
      "type": "node",
      "protocol": "auto",
      "request": "launch",
      "outputCapture": "console",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--file",
        "./test/index.ts",
        "--recursive",
        "./${relativeFile}",
        "--require",
        "ts-node/register",
        "--exit",
        "--config=./config.json",
        "--server=0",
        "--logging=false",
        "--keyFile=./volume-credentials.json",
        "--runningTests=true",
        "--clientsFolder=./test/",
        "--debug=true",
        "--remotes.maxFileSize=524288",
        "--remotes.local.url=http://localhost:8000/",
        "--remotes.local.path=test/test-server/media"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": []
    }
  ]
}
